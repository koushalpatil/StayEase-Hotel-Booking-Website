<% layout('/layouts/boilerplate.ejs') %>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #ece9e6, #ffffff);
        margin: 0;
        padding: 0;
    }

    .signup-container {
        display: flex;
        align-items: center;
        justify-content: center;
        column-gap: 5%;
        height: 90vh;
        background: linear-gradient(135deg, #ece9e6, #ffffff);
    }

    .signup-image {
        background-image: url('https://wallpapercave.com/wp/wp10535399.jpg');
        background-size: cover;
        background-position: center;
        border-radius: 10px;
        height: 80%;
        width: 45%;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1.5s ease-in-out;
    }

    .signup-form-container {
        width: 45%;
        background-color: #fff;
        padding: 3rem;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        animation: slideIn 1.5s ease-in-out;
    }

    .signup-form-container:hover {
        transform: translateY(-10px);
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
    }

    .signup-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 1rem;
        animation: textFadeIn 2s ease-in-out;
    }

    .signup-form label {
        font-weight: 500;
        color: #555;
    }

    .signup-form input {
        margin-bottom: 1rem;
        padding: 0.75rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .signup-form input:focus {
        border-color: #007bff;
        outline: none;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-success {
        width: 100%;
        padding: 0.75rem;
        font-size: 1.1rem;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        background-color: #28a745;
        color: #fff;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-success:hover {
        background-color: #218838;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes slideIn {
        from {
            transform: translateX(100%);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @keyframes textFadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<body>
    <div class="signup-container">
        <div class="signup-image"></div>
        <div class="signup-form-container">
            <h2 class="signup-title">Welcome to StayEase</h2>
            <p>Experience the best hotel stays with exclusive offers.</p>
            <form id="signupForm" action="/verify" method="POST" class="needs-validation mt-4" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" id="username" name="username" placeholder="Enter Username" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Username required!</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" name="email" placeholder="Enter Email" class="form-control" required>
                    <div class="invalid-feedback">Email required!</div>
                </div>
                <div class="mb-4">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" id="password" name="password" placeholder="Enter Password" class="form-control" required>
                    <div class="invalid-feedback">Please enter password</div>
                </div>
                <button type="submit" class="btn btn-success">Sign Up</button>
            </form>
        </div>
    </div>
</body>
