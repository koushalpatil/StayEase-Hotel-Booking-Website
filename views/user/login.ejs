<% layout('/layouts/boilerplate.ejs') %>
<body>
    <div class="row">
        <div class="col-lg-7 col-12 offset-3" style="margin: auto;">
            <h2 class="mb-3 mt-2">Login</h2>
            <form action="/login" method="post" class="needs-validation mt-4" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label" style="font-weight: 500;">Username:</label>
                    <input type="text" id="username" name="username" placeholder="Enter Username" class="form-control" required>
                    <div class="invalid-feedback">
                        Username required!    
                    </div>
                </div>
                <div class="mb-4">
                    <label for="password" class="form-label" style="font-weight: 500;">Password:</label>
                    <input type="password" id="password" name="password" placeholder="Enter Password" class="form-control" required>
                    <div class="invalid-feedback">
                        Please enter password
                    </div>
                    <div class="forgot-password mt-2" style="display: flex; justify-content: flex-end;">
                        <a href="#" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal" style="text-decoration: none;">Forgot-password?</a>
                    </div>
                </div>
                <button class="btn btn-success">Login</button>
            </form>
        </div>
    </div>

    <!-- Forgot Password Modal -->
    <div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border-radius: 10px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);">
                <div class="modal-header" style="border-bottom: none; text-align: center;">
                    <h5 class="modal-title w-100" id="forgotPasswordModalLabel" style="font-weight: bold; color: #fe424d;">Reset Your Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="background: none; border: none; font-size: 1.5rem;"></button>
                </div>
                <div class="modal-body" style="padding: 30px;">
                    <form action="/verify2" method="post" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <label for="email" class="form-label" style="font-weight: 500;">Email Address:</label>
                            <input type="email" id="email" name="email" placeholder="Enter your email" class="form-control" style="border-radius: 5px;" required>
                            <div class="invalid-feedback">
                                Please enter a valid email address
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn" style="background-color: #fe424d; color: white; border-radius: 5px;">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    

    <!-- Bootstrap JS (Ensure you include this for the modal functionality) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
