        .c4 {
            margin-top: 2rem;
            padding: 2rem;
            background-color: white;
            width: 100%;
            box-sizing: border-box;
            width: 70%;
            margin: auto;
        }

        .c4 form {
            flex: 1;
            box-sizing: border-box;
        }

        .c4 form label {
            font-weight: bold;
            margin-bottom: 0.5rem;
            display: inline-block;
            color: #333;
        }

        .c4 form input,
        .c4 form textarea {
            width: 100%;
            padding: 0.75rem;
            margin-bottom: 1rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .c4 form button {
            padding: 0.75rem 2rem;
            border: none;
            border-radius: 4px;
            background-color: #007bff;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .c4 form button:hover {
            background-color: #0069d9;
        }

        .c4 div span {
            display: block;
          
            color: #666;
        }

        .c4 div i {
            margin-right: 0.5rem;
        }

        @media (min-width: 768px) {
            .c2 {
                flex-direction: row;
            }

            .c2 div:first-child {
                flex: 1;
            }

            .c2 div:last-child {
                flex: 1;
            }

            .c3 div div {
                width: 28%;
            }

            .c4 {
                flex-direction: row;
            }

            .c4 form {
                margin-right: 2rem;
            }
        }

        @media (max-width: 768px) {
            .c2 img {
                max-height: 200px;
            }

            .c3 div div {
                width: 100%;
            }
