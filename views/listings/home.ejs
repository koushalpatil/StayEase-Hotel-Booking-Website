    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* Adjust the alpha value for desired darkness */
    border-radius: 8px;
    z-index: 1;
}

.c1 h1, .c1 h4, .c1 button {
    position: relative;
    z-index: 2;
}

        .inner-c1
