.links {
    position: relative; 
    color: #000; 
    transition: color 0.3s ease-in-out;
}

.links::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px; 
    background-color: #32AA27; 
    left: 0;
    bottom: -6px; 
    transform: scaleY(0); 
    transform-origin: bottom; 
    transition: transform 0.3s ease-in-out;
}

.links:hover {
    color: #32AA27; /* Change link color to green on hover */
}

.links:hover::after {
    transform: scaleY(1); /* Full underline on hover */
}



